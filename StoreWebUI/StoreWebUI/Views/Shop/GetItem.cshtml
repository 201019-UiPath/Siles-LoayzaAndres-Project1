@model StoreWebUI.Models.InvItem

@{
    ViewData["Title"] = "GetItem";
}

<h1>@Html.DisplayFor(model => model.Product.Name)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
</div>


<div>
    @Html.ActionLink("Add to Cart", "AddToCart", "Cart", Model) |
    @Html.ActionLink("Back to Inventory", "GetInventory", ViewData["location"])
</div>
