@model IEnumerable<StoreWebUI.Models.Location>

@{
    ViewData["Title"] = "Select a Location";
}

<h1>Our Store Locations</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("View Inventory", "GetInventory", new { Id=item.Id, Name=item.Name, Address=item.Address})
            </td>
        </tr>
        }
    </tbody>
</table>
