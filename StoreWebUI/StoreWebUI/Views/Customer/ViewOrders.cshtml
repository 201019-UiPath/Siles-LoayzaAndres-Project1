@model IEnumerable<StoreWebUI.Models.Order>

@{
    ViewData["Title"] = "View Orders";
}

<h1>View Orders</h1>

<p>
    @Html.ActionLink("Order By Date Ascending", "ViewOrdersByOrder", new { orderby = "date", orderdir = "asc" }) |
    @Html.ActionLink("Order By Date Descending", "ViewOrdersByOrder", new { orderby = "date", orderdir = "desc" }) |
    @Html.ActionLink("Order By Cost Ascending", "ViewOrdersByOrder", new { orderby = "cost", orderdir = "asc" }) |
    @Html.ActionLink("Order By Cost Descending", "ViewOrdersByOrder", new { orderby = "cost", orderdir = "desc" }) |
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <!--@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) -->
            </td>
        </tr>
}
    </tbody>
</table>

@if(Model.Count()==0)
{
    <p>No orders found.</p>
}