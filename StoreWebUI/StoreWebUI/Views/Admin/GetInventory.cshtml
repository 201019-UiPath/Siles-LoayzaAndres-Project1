@model IEnumerable<StoreWebUI.Models.InvItem>

@{
    ViewData["Title"] = ViewData["LocationName"];
}

<h1>@ViewData["LocationName"]</h1>

<p>
    <a asp-action="CreateNewProduct">Add New Product</a>
</p>
<p>
    <a asp-action="GetLocationOrders">View Orders</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Restock", "GetItem", new { locationId = item.LocationId, productId = item.ProductId })
            </td>
        </tr>
        }
        @Html.ActionLink("Select Location", "SelectLocation")
    </tbody>
</table>
