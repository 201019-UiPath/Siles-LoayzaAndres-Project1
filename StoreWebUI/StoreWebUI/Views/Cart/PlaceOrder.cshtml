@model StoreWebUI.Models.InputOrder

@{
    ViewData["Title"] = "Place Your Order";
}

<h1>Place Your Order</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PlaceOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DestinationAddress.Street" class="control-label"></label>
                <input asp-for="DestinationAddress.Street" class="form-control" />
                <span asp-validation-for="DestinationAddress.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationAddress.City" class="control-label"></label>
                <input asp-for="DestinationAddress.City" class="form-control" />
                <span asp-validation-for="DestinationAddress.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationAddress.State" class="control-label"></label>
                <input asp-for="DestinationAddress.State" class="form-control" />
                <span asp-validation-for="DestinationAddress.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationAddress.Zip" class="control-label"></label>
                <input asp-for="DestinationAddress.Zip" class="form-control" />
                <span asp-validation-for="DestinationAddress.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationAddress.Country" class="control-label"></label>
                <input asp-for="DestinationAddress.Country" class="form-control" />
                <span asp-validation-for="DestinationAddress.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetCartItems">Back to Cart</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
